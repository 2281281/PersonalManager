<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imageView"
        android:src="@drawable/tiger"
        android:layout_alignParentTop="true"

        />

    <TextView android:text="Joe Pride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:textSize="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
 />
    <TextView android:text="(727) 565-6661"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview2"
        android:textSize="31dp"
        android:layout_below="@+id/textview"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="130dp"

        />

    <TextView android:text="11706 4th Ave E Apt 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview3"
        android:textSize="18dp"
        android:layout_below="@+id/textview2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="130dp"/>

    <TextView android:text="Treasure Island, FL 33706"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview4"
        android:textSize="18dp"
        android:layout_below="@+id/textview3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="130dp"/>

    <TextView android:text="Sessions Purchased:  5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview5"
        android:textSize="22sp"
        android:layout_below="@+id/textview4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView android:text="Sessions Remaining:  3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview6"
        android:textSize="22sp"
        android:layout_below="@+id/textview5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView android:text="Next Session:  June 6, 10:00am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview7"
        android:textSize="22sp"
        android:layout_below="@+id/textview6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Session"
        android:id="@+id/scheduleButton"
        android:layout_below="@+id/textview7"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Session"
        android:id="@+id/completeButton"
        android:layout_below="@+id/scheduleButton"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed Session"
        android:id="@+id/purchaseButton"
        android:layout_below="@id/completeButton"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>